{
  "format": "custom",
  "id": "glossary_term",
  "label": "Glossary Term",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "type": "UID", "config": { "label": "UID" } },
      "term": { "type": "Text", "config": { "label": "Terme" } },
      "definition_richtext": { "type": "StructuredText", "config": { "label": "Définition", "allowTargetBlank": true, "multi": "paragraph,preformatted,heading2,heading3,strong,em,hyperlink,list-item,o-list-item,rtl" } },
      "formula_code": { "type": "Text", "config": { "label": "Formule (code)" } },
      "example_richtext": { "type": "StructuredText", "config": { "label": "Exemple", "allowTargetBlank": true, "multi": "paragraph,preformatted,strong,em,hyperlink,list-item,o-list-item" } },
      "mistakes_richtext": { "type": "StructuredText", "config": { "label": "Erreurs fréquentes", "allowTargetBlank": true, "multi": "paragraph,preformatted,strong,em,hyperlink,list-item,o-list-item" } },
      "seo": {
        "type": "Group",
        "config": {
          "label": "SEO",
          "fields": {
            "meta_title": { "type": "Text", "config": { "label": "Meta title" } },
            "meta_description": { "type": "Text", "config": { "label": "Meta description" } },
            "og_image": { "type": "Image", "config": { "label": "OG image", "constraint": {}, "thumbnails": [] } },
            "canonical_url": { "type": "Link", "config": { "label": "Canonical URL", "select": null } },
            "noindex": { "type": "Boolean", "config": { "label": "Noindex", "default_value": false } }
          }
        }
      }
    }
  }
}

