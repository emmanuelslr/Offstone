{
  "format": "custom",
  "id": "article",
  "label": "Article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": ""
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "published_at": {
        "type": "Date",
        "config": {
          "label": "Published at",
          "placeholder": ""
        }
      },
      "asset_class": {
        "type": "Select",
        "config": {
          "label": "Classe d'actifs",
          "placeholder": "",
          "options": ["résidentiel", "bureaux", "hôtellerie", "logistique"],
          "allowMultiple": true
        }
      },
      "theme": {
        "type": "Select",
        "config": {
          "label": "Thématique",
          "placeholder": "",
          "options": ["méthode", "fiscalité", "études_de_cas", "marchés"],
          "allowMultiple": true
        }
      },
      "level": {
        "type": "Select",
        "config": {
          "label": "Niveau",
          "placeholder": "",
          "options": ["découverte", "intermédiaire", "avancé"],
          "allowMultiple": false
        }
      },
      "reading_time": {
        "type": "Number",
        "config": {
          "label": "Temps de lecture (minutes)",
          "placeholder": ""
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Article mis en avant",
          "placeholder_false": "Non",
          "placeholder_true": "Oui",
          "default_value": false
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Image hero (optionnel)",
          "constraint": {},
          "thumbnails": []
        }
      },
      "faq_items": {
        "type": "Group",
        "config": {
          "label": "FAQ",
          "fields": {
            "question": {
              "type": "Text",
              "config": {
                "label": "Question",
                "placeholder": ""
              }
            },
            "answer": {
              "type": "StructuredText",
              "config": {
                "label": "Réponse",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
              }
            }
          }
        }
      }
    }
  }
}
