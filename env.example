# Supabase Configuration
# Get these values from your Supabase project settings
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Prismic Configuration
NEXT_PUBLIC_PRISMIC_ENVIRONMENT=your_prismic_environment
NEXT_PUBLIC_PRISMIC_DEFAULT_LANG=fr-fr

# Site Configuration
SITE_URL=https://offstone.vercel.app

# Security (API, token & rate limit)
LEAD_SIGNING_SECRET=change_this_to_a_long_random_value
RL_SIGNING_SECRET=change_this_to_a_long_random_value
# Optional: comma-separated list of additional trusted origins for POST/PATCH (prod only)
# TRUSTED_ORIGINS=https://offstone.fr,https://www.offstone.fr

# PoW (stateless, no external dependency)
POW_DIFFICULTY=16
# RATE_LIMIT_ENABLED=true

# CAPTCHA (disabled by default; not recommended if you want zero external deps)
# If you decide to enable later, set provider and keys above and wire client.

# Prismic Webhook Secret (for revalidation)
PRISMIC_WEBHOOK_SECRET=your_webhook_secret_here
